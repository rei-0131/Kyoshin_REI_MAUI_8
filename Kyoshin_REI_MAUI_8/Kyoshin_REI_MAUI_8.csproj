	<ItemGroup>
		<!-- App Icon -->
                <MauiIcon Include="Resources\AppIcon\ic_launcher.png" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="Resources\Splash\ic_launcher.svg" Color="#FFFFFF" BaseSize="200,200" />

		<!-- Images -->
