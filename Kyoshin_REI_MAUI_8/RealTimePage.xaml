<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kyoshin_REI_MAUI_8.RealTimePage"
             BackgroundColor="#1f2025">
    <ScrollView>
        <StackLayout
            Orientation="Vertical">
            <Label 
                x:Name="x_data"
                HorizontalOptions="Center"
                TextColor="#ffffff"/>
            <Label 
                x:Name="y_data" 
                HorizontalOptions="Center"
                TextColor="#ffffff"/>
            <Label 
                x:Name="z_data"
                HorizontalOptions="Center"
                TextColor="#ffffff"/>
            <Label
                x:Name="gal_inten"
                HorizontalOptions="Center"
                TextColor="#ffffff"/>
            <Button
                x:Name="co_button"
                Text="補正"
                HorizontalOptions="Center"
                TextColor="#ffffff"
                Clicked="co_button_Clicked"/>
            <Button
                x:Name="ss_button"
                Text="開始/終了"
                HorizontalOptions="Center"
                TextColor="#ffffff"
                Clicked="ss_button_Clicked"/>   
        </StackLayout>
    </ScrollView>
</ContentPage>